<div class="header">
	<div class="container centered">
		<h1> 50 before 30</h1>
		<p> 30 years to visit 50 states</p>
	</div>
</div>

<div class="map-body">
	<div class="container centered"> 
		<svg height="630" width="930">
		{{#each model as |state|}}

			<path {{action "stateDetails" state}} d="{{state.path}}" id="visited-{{state.visited}}"> </path>
			<text {{action "stateDetails" state}} x="{{state.x}}" y="{{state.y}}" id="text-visited-{{state.visited}}"> {{state.abv}}  </text>
		{{/each}}
		</svg>
	</div>
</div>

